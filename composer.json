{
    "require": {
        "akrabat/ip-address-middleware": "^1.0",
        "illuminate/database": "^5.5",
        "jenssegers/agent": "^2.6",
        "moontoast/math": "^1.1",
        "ramsey/uuid": "^3.7",
        "robmorgan/phinx": "^0.9.1",
        "slim/flash": "^0.2.0",
        "slim/php-view": "^2.2",
        "slim/slim": "^3.11",
        "vaalyn/config-loader-service": "dev-master",
        "vaalyn/plugin-service": "dev-master",
        "wikimedia/composer-merge-plugin": "^1.4"
    },
	"repositories": [
		{
			"type": "git",
			"url": "git@github.com:Vaalyn/config-loader-service.git"
		},
		{
			"type": "git",
			"url": "git@github.com:Vaalyn/plugin-service.git"
		}
	],
	"autoload": {
        "psr-4": {
			"App\\": "src"
        }
    },
	"extra": {
		"merge-plugin": {
			"include": [
				"plugin/*/composer.json"
			],
			"recurse": true,
			"replace": false,
			"ignore-duplicates": true,
			"merge-dev": true,
			"merge-extra": false,
			"merge-extra-deep": false,
			"merge-scripts": true
		}
	}
}
