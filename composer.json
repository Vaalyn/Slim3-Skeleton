{
    "require": {
        "slim/slim": "^3.8",
        "slim/php-view": "^2.2",
        "illuminate/database": "^5.5",
        "slim/flash": "^0.2.0",
		"robmorgan/phinx": "^0.9.1",
        "ramsey/uuid": "^3.7",
        "moontoast/math": "^1.1",
        "akrabat/ip-address-middleware": "^1.0",
        "wikimedia/composer-merge-plugin": "^1.4",
        "jenssegers/agent": "^2.6"
    },
	"autoload": {
        "psr-4": {
			"App\\": "src"
        }
    },
	"extra": {
		"merge-plugin": {
			"include": [
				"plugin/*/composer.json"
			],
			"recurse": true,
			"replace": false,
			"ignore-duplicates": true,
			"merge-dev": true,
			"merge-extra": false,
			"merge-extra-deep": false,
			"merge-scripts": true
		}
	}
}
